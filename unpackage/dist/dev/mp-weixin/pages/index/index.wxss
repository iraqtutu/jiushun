.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.user-info-card {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-info-card .greeting {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.user-info-card .role-tag {
  background: #e1f5fe;
  color: #0288d1;
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
}
.menu-grid {
  display: flex;
  flex-direction: column;
  gap: 15px;
}
.menu-item {
  padding: 25px;
  border-radius: 10px;
  color: #fff;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}
.menu-item.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}
.menu-item.secondary {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}
.menu-item .icon {
  font-size: 40px;
  margin-bottom: 10px;
  opacity: 0.8;
}
.menu-item .menu-title {
  display: block;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}
.menu-item .menu-desc {
  font-size: 14px;
  opacity: 0.9;
}
.logout-btn {
  margin-top: 40px;
  background: #fff;
  color: #ff5252;
  border: none;
  font-size: 14px;
}