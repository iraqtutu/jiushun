.container {
  padding: 15px;
  padding-bottom: 50px;
  background-color: #f5f5f5;
}
.section {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
}
.section .section-title {
  font-size: 16px;
  font-weight: bold;
  border-left: 4px solid #007aff;
  padding-left: 10px;
  margin-bottom: 15px;
}
.form-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}
.form-item:last-child {
  border-bottom: none;
}
.form-item.column {
  flex-direction: column;
  align-items: flex-start;
}
.form-item.column .label {
  margin-bottom: 10px;
}
.form-item .label {
  width: 90px;
  font-size: 14px;
  color: #333;
}
.form-item .label.required::after {
  content: "*";
  color: red;
}
.form-item .input, .form-item .picker-view, .form-item .radio-group {
  flex: 1;
  font-size: 14px;
}
.form-item .input.disabled {
  color: #999;
}
.form-item .radio {
  margin-right: 15px;
}
.form-item .textarea {
  width: 100%;
  height: 80px;
  background: #f8f8f8;
  padding: 10px;
  box-sizing: border-box;
  border-radius: 4px;
  font-size: 14px;
}
.upload-box {
  width: 100px;
  height: 100px;
  background: #f0f0f0;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.upload-box.small {
  width: 80px;
  height: 80px;
}
.upload-box .placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 12px;
}
.upload-box .placeholder .icon {
  font-size: 24px;
  margin-bottom: 5px;
}
.upload-box .preview-img {
  width: 100%;
  height: 100%;
}
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}
.photo-grid .grid-img {
  width: 80px;
  height: 80px;
  border-radius: 4px;
}
.part-row {
  display: flex;
  gap: 10px;
  margin-top: 10px;
  width: 100%;
}
.part-row .mini-input {
  background: #f8f8f8;
  padding: 5px;
  border-radius: 4px;
  font-size: 14px;
}
.part-row .mini-input.small {
  width: 60px;
  text-align: center;
}
.btn-submit {
  background-color: #007aff;
  color: #fff;
  margin-top: 20px;
}