.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.form-card {
  background: #fff;
  border-radius: 8px;
  padding: 20px;
}
.form-item {
  margin-bottom: 20px;
}
.form-item .label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
  font-weight: bold;
}
.form-item .input, .form-item .picker-view, .form-item .textarea {
  width: 100%;
  background: #f8f8f8;
  border-radius: 4px;
  padding: 10px;
  font-size: 15px;
  box-sizing: border-box;
}
.form-item .input {
  height: 44px;
}
.form-item .textarea {
  height: 100px;
}
.form-item .placeholder {
  color: #999;
}
.btn-submit {
  background-color: #007aff;
  color: #fff;
  margin-top: 30px;
}