{
	"bsonType": "object",
	"required": ["name", "mobile", "role", "reason"],
	"permission": {
		"read": "'admin' in auth.role || doc.mobile == auth.mobile", 
		"create": "true",
		"update": "'admin' in auth.role",
		"delete": "'admin' in auth.role"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成",
			"bsonType": "string"
		},
		"name": {
			"bsonType": "string",
			"description": "姓名",
			"trim": "both"
		},
		"mobile": {
			"bsonType": "string",
			"description": "手机号",
			"pattern": "^1[3-9]\d{9}$",
			"trim": "both"
		},
		"role": {
			"bsonType": "string",
			"description": "申请角色",
			"enum": ["玖顺员工", "经销商人员", "服务人员"]
		},
		"reason": {
			"bsonType": "string",
			"description": "申请理由",
			"maxLength": 500
		},
		"status": {
			"bsonType": "int",
			"description": "审核状态：0-待审核，1-已通过，2-已拒绝",
			"defaultValue": 0
		},
		"rejectReason": {
			"bsonType": "string",
			"description": "拒绝理由"
		},
		"create_date": {
			"bsonType": "timestamp"
		}
	}
}